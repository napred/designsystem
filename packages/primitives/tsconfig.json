{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declarationDir": "dist",
    "jsx": "preserve",
    "lib": ["es2018"],
    "outDir": "temp",
    "rootDir": "src",
    "target": "esnext",
    "types": ["@napred/ds", "@napred/browser", "@napred/native", "jest", "react", "react-native"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "temp", "node_modules", "src/**/__tests__/**/*", "src/**/__mocks__/**/*"],
  "references": [{ "path": "../ds" }, { "path": "../browser" }, { "path": "../native" }]
}
