{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declarationDir": "dist",
    "lib": ["es2018"],
    "outDir": "temp",
    "rootDir": "src",
    "target": "esnext",
    "types": [
      "@napred/ds",
      "css-mediaquery",
      "jest",
      "react",
      "react-native",
      "react-native-testing-library"
    ],
    "typeRoots": ["./@types", "./node_modules/@types", "../../node_modules/@types", "../../@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "src/**/__tests__/**/*", "src/**/__mocks__/**/*"]
}
