{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationDir": "dist",
    "lib": ["es2018"],
    "outDir": "temp",
    "rootDir": "src",
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "src/**/__tests__/**/*", "src/**/__mocks__/**/*"],
  "references": [{ "path": "../ds" }]
}
