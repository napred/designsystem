{
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:packages",
    "build:root": "npx tsc -p .",
    "prebuild:root": "npx rimraf dist",
    "build:packages": "npx lerna run build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "lint": "tslint -p . && lerna run lint",
    "test": "jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:watch": "jest --watch",
    "storybook:build": "npx lerna run storybook:build",
    "storybook:run": "np lerna run storybook:run",
    "typecheck": "npm run typecheck:root",
    "typecheck:root": "npx tsc -p . --noEmit",
    "typecheck:packages": "npx lerna run typecheck"
  },
  "lint-staged": {
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "stories/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "all-contributors-cli": "^5.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.2.0",
    "metro-react-native-babel-preset": "^0.50.0",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "metro-react-native-babel-preset": "^0.50.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/babel-jest",
      "**/babel-jest/**",
      "**/metro-react-native-babel-preset",
      "**/metro-react-native-babel-preset/**",
      "**/react-dom",
      "**/react-dom/**",
      "**/react-native",
      "**/react-native/**",
      "**/react-testing-library",
      "**/react-testing-library/**",
      "**/ts-jest",
      "**/ts-jest/**"
    ]
  }
}
