{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npx lerna run build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "flow": "npx lerna run flow",
    "flow:update-types": "flow-mono create-symlinks flow-typed/.flowconfig && flow-mono install-types",
    "lint": "eslint packages/**/src stories",
    "test": "jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:watch": "jest --watch --coverage",
    "storybook:build": "build-storybook",
    "storybook:run": "start-storybook -p 6006"
  },
  "lint-staged": {
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "stories/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run flow && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^4.0.7",
    "@storybook/addon-knobs": "^4.0.7",
    "@storybook/addon-links": "^4.0.7",
    "@storybook/addon-storysource": "^4.0.7",
    "@storybook/addon-viewport": "^4.0.7",
    "@storybook/addons": "^4.0.7",
    "@storybook/react": "^4.0.7",
    "all-contributors-cli": "^5.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0-beta.6",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-flowtype": "^2.44.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.6.1",
    "flow-bin": "^0.83.0",
    "flow-mono-cli": "^1.4.3",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.7.0",
    "jest-puppeteer": "^3.5.1",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.4.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.1",
    "puppeteer": "^1.10.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-values": "^0.3.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "styled-components": "^3.4.10"
  }
}
